!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Bbteka
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body
    #custom-bootstrap-menu.navbar.navbar-default{:role => "navigation"}
      .container-fluid
        .navbar-header
          %a.navbar-brand{href: "/"} BBteka - CKZiU w Jaworznie
          %button.navbar-toggle{"data-target" => ".navbar-menubuilder", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        .collapse.navbar-collapse.navbar-menubuilder
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{href: "#"} Biblioteka
            %li.dropdown
              - if user_signed_in?

                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  %span.glyphicon.glyphicon-off
                  = current_user.email
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li= link_to 'Mój profil', edit_user_registration_path
                  %li= link_to "Wyloguj", destroy_user_session_path, :method => :delete
                  %li.divider
                  %li
                    %a{:href => "http://www.kmsystem.com.pl/"} KMSystem
              - else
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Menu
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li= link_to "Rejestracja", new_user_registration_path
                  %li= link_to "Zaloguj się", new_user_session_path
                  %li.divider
                  %li
                    %a{:href => "http://www.ckziu.jaworzno.pl/"} CKZiU Jaworzno
    .container
      - if notice
        .alert.alert-success= notice
      - if alert
        .alert.alert-danger= alert
      = yield
