<div class="modal-dialog">

    <div class="modal-content">

        <%= form_for(@user, html: {class: "form-horizontal"}, remote: true) do |f| %>
          <%= render 'modal_user', f: f %>

            <div class="col-sm-7 col-sm-offset-3">
                <%= link_to "Resetuj hasło", '#', data: { confirm: 'Czy na pewno chcesz wygenerować nowe hasło dla użytkownika?' }, :class => ' reset-pass' %>
            </div>
            <div class="form-group">
                <label for="name" class="control-label col-sm-3">Hasło:</label>
                <div class="col-sm-7">
                    <%= f.text_field :password, class: 'form-control pass new-pass', disabled: true %>
                </div>
            </div>

            <div class="form-group">
                <label for="name" class="control-label col-sm-3"></label>
                <div class="col-sm-7"><%= f.hidden_field :password_confirmation, class: 'form-control confirm-pass' %></div>
            </div>
            <div class="form-group">
                <label for="name" class="control-label col-sm-3"></label>
                <div class="col-sm-7">
                <%= link_to "Generuj kartę czytelnika", user_path(@user, format: 'pdf'), :class => 'btn btn-default btn-sm' %>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="control-label col-sm-3"></label>
            <div class="col-sm-7">
            <%= link_to 'Usuń użytkownika', @user, method: :delete, data: { confirm: 'Czy na pewno chcesz usunąć tego użytkownika?' } %>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
            <%= f.submit "Wykonaj", class: "btn btn-primary" %>
        </div>
        <% end %>
    </div>

</div>
