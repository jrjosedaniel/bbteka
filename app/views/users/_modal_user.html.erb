<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>

    <h3 class="modal-title">Nowy użytkownik</h3>
</div>
<div class="modal-body">


    <div class="form-group">
        <label for="name" class="control-label col-sm-3">Login:</label>
        <div class="col-sm-7"><%= f.text_field :login, class: 'form-control'%></div>
    </div>
    <div class="form-group">
        <label for="name" class="control-label col-sm-3">Imię:</label>
        <div class="col-sm-7"><%= f.text_field :name, class: 'form-control'%></div>
    </div>
    <div class="form-group">
        <label for="name" class="control-label col-sm-3">Nazwisko:</label>
        <div class="col-sm-7"><%= f.text_field :surname, class: 'form-control' %></div>
    </div>
    <div class="form-group">
      <label for="name" class="control-label col-sm-3">Rola:</label>
      <div class="col-sm-7"><%= f.select :role, ['Czytelnik', 'Bibliotekarz', 'Administrator'], {}, { class: 'form-control' }%></div>
    </div>

    <div class="form-group">
        <label for="grade_id" class="control-label col-sm-3">Klasa:</label>
        <div class="col-sm-7"><%= f.select :grade_id, Grade.all.map{|g| [g.name, g.id]}, {prompt: "Wybierz"}, { class: 'form-control' }%></div>
    </div>

    <div class="form-group">
        <label for="name" class="control-label col-sm-3">E-mail:</label>
        <div class="col-sm-7"><%= f.text_field :email, class: 'form-control' %></div>
    </div>
