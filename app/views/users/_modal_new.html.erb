<div class="modal-dialog">

    <div class="modal-content">

        <%= form_for(@user, html: {class: "form-horizontal"}, remote: true) do |f| %>
          <%= render 'modal_user', f: f %>


            <div class="col-sm-7 col-sm-offset-3">
                <a href="#" class="generate-pass">Generuj
                </a>
                <a href="#" class="show-pass">Pokaż</a>
            </div>
            <div class="form-group">
                <label for="name" class="control-label col-sm-3">Hasło:</label>
                <div class="col-sm-7">
                    <%= f.password_field :password, class: 'form-control pass' %>
                </div>
            </div>

            <div class="form-group">
                <label for="name" class="control-label col-sm-3">Powtórz hasło:</label>
                <div class="col-sm-7"><%= f.password_field :password_confirmation, class: 'form-control pass' %></div>
            </div>
            <div class="form-group">
                <label for="name" class="control-label col-sm-3">Drukuj kartę:</label>
                <div class="col-sm-7">
                    <label class="switch">
                        <input type="checkbox">
                        <div class="slider round"></div>
                    </label>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
            <%= f.submit "Wykonaj", class: "btn btn-primary" %>
        </div>
        <% end %>
    </div>

</div>
