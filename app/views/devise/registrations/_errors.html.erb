<% if user.errors.any? %>
<div id="error-explanation">
    <div class="alert alert-danger">Dane nie zapisane - przy wypełnianiu formularza nastapiły następujące błędy:
      <ul>
        <% user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
</div>
<% end %>
